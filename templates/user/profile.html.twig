{% extends 'base.html.twig' %}

{% block title %}votre profile{% endblock %}

{% block body %}

{{include('include/header.html.twig')}}

<div class="profile_container">
    <figure class="photo_de_profil">
        <img src="{{ asset('uploads/users/' ~ user.image) }}" alt="image de profile de {{user.pseudo}} ">
    </figure>

    <div class="profile_info">

        <div>
            <h2>{{user.pseudo}}</h2>
            <p>email: {{user.email}}</p>
            <p>inscription: {{ user.dateCreation|date('d F Y')|format('j F Y') }}</p>

        </div>
        <div class="profile_buttons">
            <a href="{{ path('app_edit_user') }}" class="btn btn-primary">Modifier</a>
            <a href="{{ path('app_delete_user' )}}" class="btn btn-danger">Supprimer</a>
        </div>
        

    </div>
</div>

{% endblock %}
