<div {{ attributes }}>
    <div class="block_list_and_search">
        <div class="search_and_icons list_search">
            <i class="fa-solid fa-magnifying-glass"></i> 
            <input class="barre-recherche barre2"
            type="search"
            data-model="query"
            placeholder="Qu'écoutez Vous Aujourd'hui ?" >
            <i class="fa-solid fa-shuffle"></i>
        </div>
        <div class="all_items_List" >
            {% for item in this.getSearchResults() %}
                <div class="single_genre">
                    <a href='#'>
                        <figure>
                            <img class="genreImg " src="{{ asset('uploads/genres/' ~ item.photo) }}" alt="photo de {{item.nom}}">
                        </figure>
                    </a>
                    <a class="groupe_label" href='#'>{{item.nom}}</a>
                </div>
            {% else %}
                <p>Aucun résultat trouvé</p>
            {% endfor %}
        </div>
    </div>
</div>