{% extends 'base.html.twig' %}

{% block title %}Groupes{% endblock %}

{% block body %}
{{include('include/header.html.twig')}}



<div class="header-info longer">
    <h1><span>Artistes et Groupes</span> populaires</h1>
</div>



<div class="GroupeListAccueil GroupeListGroupe">
    {% for groupe in populaires %}
    <div class="GroupeItem">
        <a  href="#">
            <figure>
                <div class="img_container">
                <img class="imgGroupeAccueil" src="{{ asset('uploads/groupes/' ~ groupe.photo) }}" alt="image de {{groupe.nom}}">
                </div>
            </figure>
        </a>
        <a class="record_label" href="#">{{groupe.nom}}</a>
    </div>
    {% endfor %}
</div>




<div class="header-info info2 longer flex">
    <h1>Tout Les<span> Artistes et Groupes</span></h1>
    {{ component('SearchComponent', {
        'searchType': 'groupe',
    }) }} 
</div>


<section class="all_items_List">

    {% for groupe in groupes %}
    <div class="single_groupe">
        <a href="#">
            <figure>
                <img class="groupeImg" src="{{ asset('uploads/groupes/' ~ groupe.photo) }}" alt="photo de {{groupe.nom}}">
            </figure>
        </a>
        <a class="groupe_label" href="#">{{groupe.nom}}</a>
    </div>
    {% endfor %}

</section>

{{ component('SearchListComponent')}} 


{% endblock %}
